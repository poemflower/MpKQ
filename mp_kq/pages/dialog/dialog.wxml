  <button class="mpkq-btn" type="default" bindtap="showDialogFun" >拟态弹窗</button>
  <button class="mpkq-btn" type="default" bindtap="showDialogFun2" >警告弹窗</button>
  </view>
<dialog show="{{showDialog}}" bindcancelEvent="cancelEvent" bindconfirmEvent="confirmEvent"  title="确认" content="弹窗内容，告知当前状态、信息和解决方法"></dialog>
<dialog show="{{showDialog2}}" showCancel="{{false}}" showOk="{{false}}" >
