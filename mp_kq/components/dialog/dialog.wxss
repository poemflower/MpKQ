/* components/dialog/dialog.wxss */
.mpkq-demo-dialog{
  visibility:hidden;
  opacity:0;
  transition:opacity .3s;
}
.mpkq-demo-dialog_show{
  visibility:visible;
  opacity:1;
}
.mpkq-dialog__wrp{
  position:fixed;
  z-index:5000;
  top:16px;
  bottom:16px;
  left:16px;
  right:16px;
  text-align:center;
  font-size:0;
  display:-webkit-box;
  display:-webkit-flex;
  display:flex;
  -webkit-box-align:center;
  -webkit-align-items:center;
  align-items:center;
  -webkit-box-pack:center;
  -webkit-justify-content:center;
  justify-content:center;
}
.mpkq-dialog__wrp .mpkq-dialog{max-height:100%;}
.mpkq-dialog{
  background-color:#fff;
  text-align:center;
  border-radius:3px;
  overflow:hidden;
  display:-webkit-box;
  display:-webkit-flex;
  display:flex;
  -webkit-flex-direction:column;
  -webkit-box-orient:vertical;
  -webkit-box-direction:normal;
  flex-direction:column;
  max-height:90%;
}
.mpkq-dialog__hd{padding:32px 24px 16px}
.mpkq-dialog__title{
  font-weight:700;
  font-size:17px;
  line-height:1.4
}
.mpkq-dialog__bd{
  -webkit-box-flex:1;
  -webkit-flex:1;
  flex:1;
  overflow-y:auto;
  -webkit-overflow-scrolling:touch;
  padding:0 24px;
  margin-bottom:32px;
  min-height:40px;
  font-size:17px;
  line-height:1.4;
  overflow-wrap:break-word;
  -webkit-hyphens:auto;
  hyphens:auto;
  color:rgba(0,0,0,.5);
}
.mpkq-dialog__bd:first-child{
  padding:32px 24px 0;
  font-weight:700;
  color:rgba(0,0,0,.9);
  -webkit-flex-direction:column;
  -webkit-box-orient:vertical;
  -webkit-box-direction:normal;
  flex-direction:column;
  -webkit-box-pack:center;
  -webkit-justify-content:center;
  justify-content:center;
}
.mpkq-dialog__bd:first-child,.mpkq-dialog__ft{
  display:-webkit-box;
  display:-webkit-flex;
  display:flex;
}
.mpkq-dialog__ft{
  position:relative;
  line-height:64px;
  min-height:64px;
  font-size:17px;
}
.mpkq-dialog__ft:after{
  content:" ";
  position:absolute;
  left:0;
  top:0;
  right:0;
  height:1px;
  border-top:1rpx solid rgba(0,0,0,.1);
  color:rgba(0,0,0,.1);
}
.mpkq-dialog__btn{
  display:block;
  -webkit-box-flex:1;
  -webkit-flex:1;
  flex:1;
  color:rgba(0,0,0,.9);
  font-weight:700;
  text-decoration:none;
  -webkit-tap-highlight-color:rgba(0,0,0,0);
  position:relative;
}
.mpkq-dialog__btn:active{background-color:#ececec}
.mpkq-dialog__btn:after{
  content:" ";
  position:absolute;
  left:0;
  top:0;
  width:1px;
  bottom:0;
  border-left:1rpx solid rgba(0,0,0,.1);
  color:rgba(0,0,0,.1);
}
.mpkq-dialog__btn:first-child:after{display:none} 
.mpkq-dialog__btn_primary{
  color:#06ae56;
}
@media screen and (min-width:352px){
  .mpkq-dialog{width:320px;margin:0 auto}
}